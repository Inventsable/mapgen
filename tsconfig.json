{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist", // Multi file compilation
    // "outFile": "./bin/index.js", // Single file compilation, requires 'amd' or 'system'
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/"],
  "exclude": [
    "./node_modules",
    ".env",
    ".gitignore",
    "yarn.lock",
    "package-lock.json"
  ]
}
